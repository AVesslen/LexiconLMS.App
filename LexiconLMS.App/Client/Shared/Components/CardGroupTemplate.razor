@typeparam TItem

<div class="container-fluid border rounded p-0 mb-4 m-0">
    <h4 class="border-bottom p-4">@GroupHeader</h4>
    <div class="row px-4 pb-4">
        @foreach (var item in Items)
        {
            if (CardTemplate is not null)
            {
                <div class="col-lg-@(12/4) g-4">
                    <div class="card">
                        @CardTemplate(item)
                    </div>
                </div>
            }
        }
    </div>
</div>


@code {

    [Parameter]
    public RenderFragment? GroupHeader { get; set; }

    [Parameter]
    public RenderFragment<TItem>? CardTemplate { get; set; }

    [Parameter]
    public IReadOnlyList<TItem> Items { get; set; }

}
