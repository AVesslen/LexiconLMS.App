<div class="card text-center @(user.Published?"":"inactive-card")">
       @* <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="@color"></rect><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>*@
    <img class="bd-placeholder-img card-img-top" src="@user.Avatar"/>
        <div class="card-body">
        <h6 class="card-title"><a href=@($"mailto:{@user.Email}") class="stretched-link">@user.FullName</a></h6>
        </div>
        @*<div class="card-body"><a href=@($"mailto:{@user.Email}") class="btn btn-primary"><i class="oi oi-envelope-closed px-1"></i></a></div>*@
    </div>

@code {
    Random random = new Random();
    string color { get; set; } = "#868e96";

    [Parameter]
    public ApplicationUserDto user { get; set; } = new ApplicationUserDto();

    protected override void OnParametersSet()
    {
        color = String.Format("#{0:X6}", random.Next(0x1000000)); // = "#A197B9"
    }
}
